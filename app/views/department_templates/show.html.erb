<h1>
  Department #<%= @department.id %> details
</h1>

<a href="/departments/<%= @department.id %>/edit">
  Edit department
</a>

<hr>

<dl>
  <dt>
    Name
  </dt>
  <dd>
    <%= @department.name %>
  </dd>
  
  <dt>
    Number of courses 
  </dt>
  <dd>
    <%= @department.courses.count %>
  </dd>
</dl>

<a href="/delete_department/<%= @department.id %>">
  Delete department
</a>

<hr>

<a href="/departments">
  Go back
</a>


<h4 class="mt-4">Courses</h4>

<div class="card">
  <ul class="list-group list-group-flush">
      <% @department.courses.each do |course| %>
        <li class="list-group-item">
          <a href="/courses/<%= course.id %>"><%= course.title %></a>
        </li>
      <% end %>
  </ul>
</div>

<h4 class="mt-4">Add a new course</h4>
<form action="/create_course" method="post">
  <!-- Label and input for title -->
  <div class="form-group">
    <label for="title">
      Title
    </label>

    <input type="text" id="title" name="title" class="form-control" value="<%= @course.try(:title) %>">
  </div>
          
  <!-- Label and input for hidden department_id -->
  <input type="hidden" name="department_id" value="<%= @department.id %>">

  <button class="btn btn-block btn-outline-secondary">
    Create course
  </button>
</form>
